[Unit]
Description=GramSaarthi FastAPI Backend
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/GramSaarthi/backend
EnvironmentFile=/home/ubuntu/GramSaarthi/backend/.env
ExecStart=/home/ubuntu/GramSaarthi/backend/.venv/bin/uvicorn app.main:app --host 127.0.0.1 --port 8000
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
